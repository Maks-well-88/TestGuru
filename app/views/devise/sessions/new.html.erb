<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="session">
      <h2 class="display-5 mb-4 text-center"><%= t('entrance') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('enter_email') %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t('enter_pass') %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions d-grid gap-2">
          <%= f.submit t('btn_entrance'), class: "btn btn-primary mt-1" %>
        </div>
      <% end %>

      <div class="mt-3 mb-4" >
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
