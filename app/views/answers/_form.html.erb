<h1><%= answer_header(@answer) %></h1>
<%= form_with model: [@question, @answer] do | f | %>
  <%= render 'shared/errors', resource: @answer %>

  <p><%= f.label :body %></p>
  <p><%= f.text_area :body, size: "60x5" %></p>

  <p>
    <%= f.check_box :correct %>
    <%= f.label :correct %>
  </p>

  <p><%= f.submit %></p>
<% end %>
