<h1 class="mt-3 mb-4"><%= t('.all_tests') %>:</h1>

<div class="row">
  <div class="col-12 col-md-6">
    <table class="table">
      <thead>
        <tr class="table-info">
          <th scope="col"></th>
          <th class="sort-by-title pointer" scope="col">
            <%= t('.title') %>
            <%= octicon "arrow-up", class: "text-success hide" %>
            <%= octicon "arrow-down", class: "text-success hide" %>
          </th>
          <th scope="col"><%= t('.level') %></th>
          <th scope="col"><%= t('.questions') %></th>
        </tr>
      </thead>
      <tbody>

        <%= render @tests %>

      </tbody>
    </table>
  </div>
</div>
