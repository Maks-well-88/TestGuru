<h2>Зарегистрируйтесь:</h2>
<%= form_with model: @user do |f| %>
  <%= render 'shared/errors', resource: @user %>

  <p>
    <%= f.label :name %>:
    <%= f.text_field :name, placeholder: 'введите имя' %>
  </p>

  <p>
    <%= f.label :surname %>:
    <%= f.text_field :surname, placeholder: 'введите фамилию' %>
  </p>

  <p>
    <%= f.label :email %>:
    <%= f.email_field :email, placeholder: 'введите email' %>
  </p>

  <p>
    <%= f.label :password %>:
    <%= f.password_field :password, placeholder: 'введите пароль' %>
  </p>

  <p>
    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation, placeholder: 'повторите пароль' %>
  </p>

  <p>
    <%= f.submit 'Зарегистрироваться' %>
  </p>

<% end %>
<br />
