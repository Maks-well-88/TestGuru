<div class="row">
  <div class="col-6">
    <h1 class="mt-3">Все награды</h1>
    <hr>
    <%= link_to "К тестам", tests_path, class: "btn btn-outline-info btn-sm" %>
    <% if current_user.admin? %>
      <%= link_to "Создать награду", new_admin_badge_path, class: "btn btn-success btn-sm" %>
    <% end %>
    <div class="row">
      <%= render @badges %>
    </div>
  </div>

  <div class="col-6">
    <h1 class="mt-3">Мои награды</h1>
    <hr>
    <br />
    <div class="row">
      <% if current_user.badges.any? %>
        <%= render @user_badges %>
      <% else %>
        <p class="mt-4">Пока у вас нет ни одной награды.</p>
      <% end %>
    </div>
  </div>
</div>
<br />
<br />
