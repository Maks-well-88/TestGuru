<h1><%= answer_header(@answer) %></h1>
<%= form_with model: [:admin, @question, @answer] do | f | %>
  <%= render 'shared/errors', resource: @answer %>

  <p><%= f.label :body %></p>
  <p><%= f.text_area :body, size: "60x5", placeholder: t('answer') %></p>

  <p>
    <%= f.check_box :correct %>
    <%= f.label :correct %>
  </p>

  <p><%= f.submit %></p>
<% end %>
<p><%= link_to t('back'), admin_question_path(@answer.question) %></p>
