<h1 class="mt-3"><%= t('.all_tests') %>:</h1>

<%= render 'shared/errors', resource: @test %>

<p><%= link_to t('create_test'), new_admin_test_path, class: "btn btn-success mt-3 mb-3" %></p>

<div class="row">
  <div class="col-8">
    <table class="table">
      <thead>
        <tr class="table-info text-center">
          <th class="text-start"><%= t('.title') %></th>
          <th><%= t('.level')%></th>
          <th><%= t('.questions') %></th>
          <th colspan="3"><%= t('.action') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>
